{
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "comma-dangle":             [2, "never"],
    "no-cond-assign":           2,
    "no-constant-condition":    2,
    "no-dupe-args":             2,
    "no-dupe-keys":             2,
    "no-duplicate-case":        2,
    "no-empty":                 2,
    "no-func-assign":           2,
    "no-inner-declarations":    2,
    "no-unreachable":           2,
    "no-delete-var":            2,
    "no-undef":                 2
    //    "no-unused-vars":           1   // produces a lot of errors. Will be turned on later
  },
  "globals": {  // global variables allowed by 'no-undef' rule. true is read-write for var, false is read-only
  },
  "env": {
    "node": true,
    "mocha": true
  }
}
